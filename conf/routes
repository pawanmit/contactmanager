# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET /upload 					controllers.com.contactmanager.UploadContactsController.index()
POST /uploadcsv					controllers.com.contactmanager.UploadContactsController.uploadCsv()
GET /contacts 					controllers.com.contactmanager.ReportsController.fetchAllContacts()
GET /companies 					controllers.com.contactmanager.ReportsController.fetchAllCompanies()
GET /companycontacts/:id			controllers.com.contactmanager.ReportsController.fetchContactsByCompany(id:String)
GET /contactrsvp/:id			controllers.com.contactmanager.ReportsController.fetchRsvpByProfile(id:String)